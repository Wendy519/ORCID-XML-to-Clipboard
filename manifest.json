{
    "manifest_version": 3,
    "name": "ORCID XML to Clipboard",
    "version": "1.0",
    "description": "Run process on page activated by click in extension popup",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "https://orcid.org/*"
    ]
}